@model IEnumerable<VeterinariaApp.Models.tbl_profesional>

@{
    ViewBag.Title = "Profesionales";
}

<div class="row">
    <div class="col-7">
        <h2 class="border-left border-bottom border-info rounded-left">Profesionales <span class="text-muted" style="font-size: 16px">Nuestros mejores cuidadores.</span></h2>
    </div>
</div>
<hr />

<div class="row my-lg-3">
    <div class="col-sm-12">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                @Html.ActionLink("Registrar profesional", "Create", null, new { @class = "nav-link list-group-item" })
            </li>
            <li class="nav-item align-self-center ml-2" style="font-size: 2rem;">
                <i class="far fa-hospital"></i>
            </li>
        </ul>
    </div>
</div>

<table class="table table-sm">
    <caption>Lista de profesionales. <i class="fas fa-user-md"></i></caption>
    <thead class="thead-light">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Edad</th>
            <th scope="col">Fecha nacimiento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_pfl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido_pfl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono_pfl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.celular_pfl)
                </td>
                <td>
                    @Html.ActionLink(" Actualizar", "Edit", new { id = item.codigo_pfl }, new { @class = "btn btn-outline-info btn-sm far fa-edit" }) |
                    @Html.ActionLink("Ver", "Details", new { id = item.codigo_pfl }, new { @class = "btn btn-outline-dark btn-sm far fa-eye" }) |
                    @Html.ActionLink(" Eliminar", "Delete", new { id = item.codigo_pfl }, new { @class = "btn btn-outline-danger btn-sm far fa-trash-alt" })
                </td>
            </tr>
        }
    </tbody>
</table>