@model VeterinariaApp.Models.tbl_profesional

@{
    ViewBag.Title = "Profesionales";
}

<div class="row">
    <div class="col-7">
        <h2 class="border-left border-bottom border-info rounded-left">Profesionales <span class="text-muted" style="font-size: 16px">Nuestros mejores cuidadores.</span></h2>
    </div>
</div>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border-dark rounded mb-5">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">

                <div class="form-group col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.codigo_pfl, "Identificación", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.codigo_pfl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigo_pfl, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.nombre_pfl, "Nombre", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.nombre_pfl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_pfl, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.apellido_pfl, "Apellido", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.apellido_pfl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apellido_pfl, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-row">

                <div class="form-group col-sm-12 col-md-6">
                    @Html.LabelFor(model => model.telefono_pfl, "Teléfono", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.telefono_pfl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono_pfl, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-sm-12 col-md-6">
                    @Html.LabelFor(model => model.celular_pfl, "Celular", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.celular_pfl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.celular_pfl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink(" Volver atrás", "Index", null, new { @class = "btn btn-outline-dark fas fa-arrow-left ml-0" })
                    <button type="submit" class="btn btn-outline-success float-right"><i class="far fa-save"></i>   Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
