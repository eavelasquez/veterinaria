@model VeterinariaApp.Models.tbl_raza

@{
    ViewBag.Title = "Razas";
}

<div class="row">
    <div class="col-7">
        <h2 class="border-left border-bottom border-info rounded-left">Razas <span class="text-muted" style="font-size: 16px">Un pequeño grupo.</span></h2>
        <span class="badge badge-info">Actualizando</span>
    </div>
</div>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border-dark rounded mb-5">
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.codigo_r)
            <div class="form-row">

                <div class="form-group col-sm-12 col-md-6">
                    @Html.LabelFor(model => model.nombre_r, "Nombre", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.nombre_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_r, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink(" Volver atrás", "Index", null, new { @class = "btn btn-outline-dark fas fa-arrow-left ml-0" })
                    <button type="submit" class="btn btn-outline-success float-right"><i class="far fa-save"></i>   Actualizar</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
