@model IEnumerable<VeterinariaApp.Models.tbl_mascotas>

@{
    ViewBag.Title = "Mascotas";
}

<div class="row">
    <div class="col-7">
        <h2 class="border-left border-bottom border-info rounded-left">Mascotas <span class="text-muted" style="font-size: 16px">Grandes personas..</span></h2>
    </div>
</div>

<div class="row my-lg-3">
    <div class="col-sm-12">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                @Html.ActionLink("Registrar especie", "Create", "tbl_especie", null, new { @class = "nav-link list-group-item" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Registrar raza", "Create", "tbl_raza", null, new { @class = "nav-link list-group-item" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Registrar mascota", "Create", null, new { @class = "nav-link list-group-item" })
            </li>
            <li class="nav-item align-self-center ml-2" style="font-size: 2rem;">
                <i class="far fa-hospital"></i>
            </li>
        </ul>
    </div>
</div>

<table class="table table-sm">
    <caption>Lista de mascotas. <i class="fas fa-cat"></i></caption>
    <thead class="thead-light">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Edad</th>
            <th scope="col">Sexo</th>
            <th scope="col">Fecha nacimiento</th>
            <th scope="col">Dueño</th>
            <th scope="col">Especie</th>
            <th scope="col">Raza</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edad_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sexo_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_nacimiento_m)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_cliente.nombre_c)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_especie.nombre_e)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_raza.nombre_r)
                </td>
                <td>
                    @Html.ActionLink(" Actualizar", "Edit", new { id = item.id_m }, new { @class = "btn btn-outline-info btn-sm far fa-edit" }) |
                    @Html.ActionLink("Ver", "Details", new { id = item.id_m }, new { @class = "btn btn-outline-dark btn-sm far fa-eye" }) |
                    @Html.ActionLink(" Eliminar", "Delete", new { id = item.id_m }, new { @class = "btn btn-outline-danger btn-sm far fa-trash-alt" })
                </td>
            </tr>
        }
    </tbody>

</table>
