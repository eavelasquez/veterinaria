<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VeterinariaApp</title>
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/svg" sizes="16x16" href="~/Content/dog-solid.svg" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="text-center text-uppercase mt-3">
                <h4><span class="badge badge-dark">Veterinaria</span></h4>
            </div>
            <div class="shadow-sm mb-3 bg-white rounded text-center">
                <div class="sidebar-heading text-success font-weight-normal">Panel de opciones</div>
            </div>
            <div class="list-group list-group-flush px-3">
                @Html.ActionLink("Cliente", "Index", "tbl_cliente", null, new { @class = "list-group-item list-group-item-action bg-light" })
                @Html.ActionLink("Mascotas", "Index", "tbl_mascotas", null, new { @class = "list-group-item list-group-item-action bg-light" })
                @Html.ActionLink("Profesional", "Index", "tbl_profesional", null, new { @class = "list-group-item list-group-item-action bg-light" })
            </div>
            <div class="text-center mt-2">
                <span style="font-size: 9rem;">
                    <i class="fas fa-paw"></i>
                </span>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-light" id="menu-toggle"><i class="fas fa-bars"></i></button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link">Inicio <span style="font-size: 1rem;"><i class="fas fa-home"></i></span></a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <div class="row mt-4">
                    <div class="col-sm-12">
                        <div class="shadow-lg p-3 mb-5 bg-white border-left border-success rounded-lg">
                            <h4 class="text-success text-monospace"><i class="fas fa-paw"></i>  Veterinaria</h4>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>