@model VeterinariaApp.Models.tbl_cliente

@{
    ViewBag.Title = "Clientes";
}

<div class="row">
    <div class="col-7">
        <h2 class="border-left border-bottom border-info rounded-left">Clientes <span class="text-muted" style="font-size: 16px">Grandes personas.</span></h2>
        <span class="badge badge-info">Actualizando</span>
    </div>
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border-dark rounded mb-5">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_c)
            <div class="form-row">

                <div class="form-group col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.nombre_c, "Nombre", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.nombre_c, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_c, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.apellido_c, "Apellido", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.apellido_c, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apellido_c, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-row">

                <div class="form-group col-sm-12 col-md-6">
                    @Html.LabelFor(model => model.edad_c, "Edad", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.edad_c, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.edad_c, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-sm-12 col-md-6">
                    @Html.LabelFor(model => model.fecha_nacimiento_c, "Fecha de nacimiento", htmlAttributes: new { @class = "text-muted" })
                    @Html.EditorFor(model => model.fecha_nacimiento_c, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.fecha_nacimiento_c, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink(" Volver atrás", "Index", null, new { @class = "btn btn-outline-dark fas fa-arrow-left ml-0" })
                    <button type="submit" class="btn btn-outline-success float-right"><i class="far fa-save"></i>   Actualizar</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
